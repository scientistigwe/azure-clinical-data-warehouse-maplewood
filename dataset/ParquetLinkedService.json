{
	"name": "ParquetLinkedService",
	"properties": {
		"linkedServiceName": {
			"referenceName": "AzureDataLakeStorageLinkedService",
			"type": "LinkedServiceReference"
		},
		"parameters": {
			"schemaname": {
				"type": "string"
			},
			"tablename": {
				"type": "string"
			}
		},
		"annotations": [],
		"type": "Parquet",
		"typeProperties": {
			"location": {
				"type": "AzureBlobFSLocation",
				"fileName": {
					"value": "@concat(dataset().tablename, '.parquet')\n",
					"type": "Expression"
				},
				"folderPath": {
					"value": "@concat('parquet/', dataset().schemaname, '/', dataset().tablename, '/', formatDateTime(utcNow(), 'yyyyMMdd-HHmmss'))",
					"type": "Expression"
				},
				"fileSystem": "bronze"
			},
			"compressionCodec": "snappy"
		},
		"schema": []
	}
}